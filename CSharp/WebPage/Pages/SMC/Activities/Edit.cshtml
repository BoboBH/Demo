@page
@using WebPage.Models
@model WebPage.Pages.SMC.Activities.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/_BootstrapLayout.cshtml";
}

<h2>Edit</h2>

<h4>SMCActivity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SMCActivity.Id" />
            <div class="form-group">
                <label asp-for="SMCActivity.Name" class="control-label"></label>
                <input asp-for="SMCActivity.Name" class="form-control" />
                <span asp-validation-for="SMCActivity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCActivity.OwnerId" class="control-label"></label>
                <select asp-for="SMCActivity.OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
                <span asp-validation-for="SMCActivity.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCActivity.Description" class="control-label"></label>
                <input asp-for="SMCActivity.Description" class="form-control" />
                <span asp-validation-for="SMCActivity.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCActivity.Key" class="control-label"></label>
                <input asp-for="SMCActivity.Key" class="form-control" />
                <span asp-validation-for="SMCActivity.Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCActivity.ParentActivityId" class="control-label"></label>
                <select asp-for="SMCActivity.ParentActivityId" class="form-control" asp-items="ViewBag.ParentActivityId"></select>
                <span asp-validation-for="SMCActivity.ParentActivityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCActivity.Type" class="control-label"></label>
                <select asp-for="SMCActivity.Type" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(SMCActivityType))"></select>
                <span asp-validation-for="SMCActivity.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCActivity.Status" class="control-label"></label>
                <select asp-for="SMCActivity.Status" class="form-control"  asp-items="@Html.GetEnumSelectList(typeof(SMCActivityStatus))"></select>
                <span asp-validation-for="SMCActivity.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
