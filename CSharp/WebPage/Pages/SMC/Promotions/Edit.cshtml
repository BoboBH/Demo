@page
@using WebPage.Models
@model WebPage.Pages.SMC.Promotions.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/_BootstrapLayout.cshtml";
}

<h2>Edit</h2>

<h4>SMCPromotion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SMCPromotion.Name" class="control-label"></label>
                <input asp-for="SMCPromotion.Name" class="form-control" />
                <span asp-validation-for="SMCPromotion.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.OwnerId" class="control-label"></label>
                <select asp-for="SMCPromotion.OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
                <span asp-validation-for="SMCPromotion.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.Code" class="control-label"></label>
                <input asp-for="SMCPromotion.Code" class="form-control" />
                <span asp-validation-for="SMCPromotion.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.Key" class="control-label"></label>
                <input asp-for="SMCPromotion.Key" class="form-control" />
                <span asp-validation-for="SMCPromotion.Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.ActivityId" class="control-label"></label>
                <select asp-for="SMCPromotion.ActivityId" class="form-control" asp-items="ViewBag.ActivityId"></select>
                <span asp-validation-for="SMCPromotion.ActivityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.ChannelId" class="control-label"></label>
                <select asp-for="SMCPromotion.ChannelId" class="form-control" asp-items="ViewBag.ChannelId"></select>
                <span asp-validation-for="SMCPromotion.ChannelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.StartDate" class="control-label"></label>
                <input asp-for="SMCPromotion.StartDate" class="form-control" />
                <span asp-validation-for="SMCPromotion.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.EndDate" class="control-label"></label>
                <input asp-for="SMCPromotion.EndDate" class="form-control" />
                <span asp-validation-for="SMCPromotion.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.Url" class="control-label"></label>
                <input asp-for="SMCPromotion.Url" class="form-control" />
                <span asp-validation-for="SMCPromotion.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.Status" class="control-label"></label>
                <select asp-for="SMCPromotion.Status" class="form-control"   asp-items="@Html.GetEnumSelectList(typeof(SMCPromotionStatus))"></select>
                <span asp-validation-for="SMCPromotion.Status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="SMCPromotion.Id" />
            <div class="form-group">
                <label asp-for="SMCPromotion.CreatedOn" class="control-label"></label>
                <input asp-for="SMCPromotion.CreatedOn" class="form-control" />
                <span asp-validation-for="SMCPromotion.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMCPromotion.UpdatedOn" class="control-label"></label>
                <input asp-for="SMCPromotion.UpdatedOn" class="form-control" />
                <span asp-validation-for="SMCPromotion.UpdatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
