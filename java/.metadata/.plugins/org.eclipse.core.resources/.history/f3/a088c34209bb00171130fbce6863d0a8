package com.bobo.spring_boot_app.main.resources;

import javax.annotation.PostConstruct;

import com.indoqa.boot.html.react.AbstractReactResourceBase;

public class FrontendResource extends AbstractReactResourceBase {

    public static final String FRONTEND_FILESYSTEM_LOCATION = "../spring-boot-app-frontend/target";
    private static final String FRONTEND_CLASSPATH_LOCATION = "/spring-boot-app-frontend";

    @PostConstruct
    public void mount() {
        this.html("/", FRONTEND_CLASSPATH_LOCATION, FRONTEND_FILESYSTEM_LOCATION);
    }
}
